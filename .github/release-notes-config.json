{
  "categories": [
    {
      "title": "## üöÄ Features",
      "labels": [],
      "rules": [
        {
          "pattern": "^feat(\\(.+\\))?!?:.+$",
          "flags": "gu"
        }
      ]
    },
    {
      "title": "## üêõ Bug Fixes", 
      "labels": [],
      "rules": [
        {
          "pattern": "^fix(\\(.+\\))?!?:.+$",
          "flags": "gu"
        }
      ]
    },
    {
      "title": "## üìö Documentation",
      "labels": [],
      "rules": [
        {
          "pattern": "^docs(\\(.+\\))?!?:.+$",
          "flags": "gu"
        }
      ]
    },
    {
      "title": "## üßπ Maintenance",
      "labels": [],
      "rules": [
        {
          "pattern": "^(chore|ci|build|refactor)(\\(.+\\))?!?:.+$",
          "flags": "gu"
        }
      ]
    },
    {
      "title": "## ‚ö†Ô∏è Breaking Changes",
      "labels": [],
      "rules": [
        {
          "pattern": "^.+!:.+$",
          "flags": "gu"
        }
      ]
    }
  ],
  "template": "${{CHANGELOG}}\n\n## Contributors\n\nThanks to all contributors who made this release possible!\n\n${{CONTRIBUTORS}}",
  "pr_template": "- ${{TITLE}} ${{MERGE_SHA}}",
  "empty_template": "- No changes",
  "transformers": [
    {
      "pattern": "^(feat|fix|docs|chore|ci|build|refactor)(\\(.+\\))?!?:\\s*(.+)$",
      "target": "- $3"
    }
  ],
  "max_tags_to_fetch": 200,
  "max_pull_requests": 1000,
  "max_back_track_time_days": 365,
  "exclude_merge_branches": [
    "dependabot/**"
  ]
}
